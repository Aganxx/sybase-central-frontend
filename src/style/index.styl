.arco-layout .arco-layout.layout-content
  background #fff
  .arco-layout-content
    margin  20px 32px
    .header
      padding-bottom 20px
      border-bottom 1px solid rgba(23,12,44,.1)
      .title
        font-size 24px

.arco-menu-light .arco-menu-item
  border-radius 8px


.card
  width 460px
  height 200px
  border none
  border-radius 10px
  background rgba(255, 255, 255 .7)
  box-shadow 0 2px 10px #00000026
  .arco-card-header
    padding 15px 10px
    margin 0 15px
    height auto
  .arco-card-body
    margin 20px 10px


.modal-content
  .input-title
    margin 15px 0 5px
    font-size 16px
  .arco-input-wrapper
    border-radius 6px
    height 40px
  .arco-select
    border-radius 6px
    height 40px
    width 160px
